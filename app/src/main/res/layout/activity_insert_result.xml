<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertResultActivity"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginRight="4dp"
    android:background="@drawable/background">

<TableLayout
        android:id="@+id/result_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
       >

    <TableRow>
        <TextView
            android:background="@drawable/table"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/WE_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginEnd="2dp" />
        <TextView
            android:background="@drawable/table"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/YOU_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginStart="2dp"/>
    </TableRow>
</TableLayout>

    <TableLayout
        android:id="@+id/results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/result_table"
        android:background="@drawable/background_call"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">
        <TableRow>
            <EditText
                android:id="@+id/editTextWe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/enterResult"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginStart="1dp"
                android:maxLength="3"
                android:inputType="number"
                />

            <EditText
                android:id="@+id/editTextThem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/enterResult"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginStart="1dp"
                android:maxLength="3"
                android:inputType="number"
              />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/calls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/results"
        android:background="@drawable/background_call">

        <TableRow>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <ToggleButton
                android:id="@+id/toggleButton20We"
                android:background="@drawable/togglebutton_selector"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="4dp"
                android:textOn="@string/twenty"
                android:textOff="@string/twenty"/>

            <ToggleButton
                android:id="@+id/toggleButton40We"
                android:background="@drawable/togglebutton_selector"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="4dp"
                android:textOn="@string/forty"
                android:textOff="@string/forty"/>



            <ToggleButton
                android:id="@+id/toggleButton50We"
                android:background="@drawable/togglebutton_selector"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="4dp"
                android:textOn="@string/fifty"
                android:textOff="@string/fifty"/>

            <ToggleButton
                android:id="@+id/toggleButton80We"
                android:background="@drawable/togglebutton_selector"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="4dp"
                android:textOn="@string/eighty"
                android:textOff="@string/eighty"/>


            <ToggleButton
                android:id="@+id/toggleButton90We"
                android:background="@drawable/togglebutton_selector"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="4dp"
                android:textOn="@string/ninety"
                android:textOff="@string/ninety"/>

            <ToggleButton
                android:id="@+id/toggleButton100We"
                android:background="@drawable/togglebutton_selector"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="4dp"
                android:textOn="@string/hundred"
                android:textOff="@string/hundred"/>

            <ToggleButton
                android:id="@+id/toggleButton150We"
                android:background="@drawable/togglebutton_selector"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="4dp"
                android:textOn="@string/hundredAndFifty"
                android:textOff="@string/hundredAndFifty"/>

            <ToggleButton
                android:id="@+id/toggleButton200We"
                android:background="@drawable/togglebutton_selector"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="4dp"
                android:textOn="@string/twoHundred"
                android:textOff="@string/twoHundred"
                />
        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginStart="1dp">

                <ToggleButton
                    android:id="@+id/toggleButton20Them"
                    android:background="@drawable/togglebutton_selector"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginStart="1dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="4dp"
                    android:textOn="@string/twenty"
                    android:textOff="@string/twenty"/>

                <ToggleButton
                    android:id="@+id/toggleButton40Them"
                    android:background="@drawable/togglebutton_selector"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginStart="1dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="4dp"
                    android:textOn="@string/forty"
                    android:textOff="@string/forty"/>

                <ToggleButton
                    android:id="@+id/toggleButton50Them"
                    android:background="@drawable/togglebutton_selector"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginStart="1dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="4dp"
                    android:textOn="@string/fifty"
                    android:textOff="@string/fifty"/>

                <ToggleButton
                    android:id="@+id/toggleButton80Them"
                    android:background="@drawable/togglebutton_selector"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginStart="1dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="4dp"
                    android:textOn="@string/eighty"
                    android:textOff="@string/eighty"/>


                <ToggleButton
                    android:id="@+id/toggleButton90Them"
                    android:background="@drawable/togglebutton_selector"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginStart="1dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="4dp"
                    android:textOn="@string/ninety"
                    android:textOff="@string/ninety"/>

                <ToggleButton
                    android:id="@+id/toggleButton100Them"
                    android:background="@drawable/togglebutton_selector"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginStart="1dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="4dp"
                    android:textOn="@string/hundred"
                    android:textOff="@string/hundred"/>

                <ToggleButton
                    android:id="@+id/toggleButton150Them"
                    android:background="@drawable/togglebutton_selector"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginStart="1dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="4dp"
                    android:textOn="@string/hundredAndFifty"
                    android:textOff="@string/hundredAndFifty"/>

                <ToggleButton
                    android:id="@+id/toggleButton200Them"
                    android:background="@drawable/togglebutton_selector"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginStart="1dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="4dp"
                    android:textOn="@string/twoHundred"
                    android:textOff="@string/twoHundred"
                    />
            </LinearLayout>
        </TableRow>



    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">
    <Button
        android:id="@+id/doneButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/done"
        android:textSize="20sp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/table" />

    </LinearLayout>

</RelativeLayout>

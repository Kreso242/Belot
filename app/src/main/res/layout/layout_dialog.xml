<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:background="#f1f0f0">

<LinearLayout
    android:id="@+id/dialog_layout"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:layout_centerHorizontal="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/who_is_winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:textColor="#163e0d"
        android:textStyle="bold"
        android:text="Winner is:"
       />

    <TextView
        android:id="@+id/winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:textColor="#163e0d"
        android:textStyle="bold"
        android:text="pobjednik"
        />
</LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/la_bela_icon_transparent"
            android:layout_toLeftOf="@+id/dialog_layout"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:src="@mipmap/la_bela_icon_transparent"
            android:layout_toRightOf="@+id/dialog_layout"/>


</RelativeLayout>
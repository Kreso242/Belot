<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameSelectorActivity">

    <LinearLayout
        android:id="@+id/textViewLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp">
    <TextView
        android:id="@+id/playingToTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playing up to:"
        android:textStyle="bold"
        android:textSize="20dp"
       />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/radioButtonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/textViewLayout"
        android:orientation="vertical">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        
        <RadioButton
            android:id="@+id/radioButton1001"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radioButtonsLayout"
            android:layout_alignRight="@+id/playingToTextView"
            android:text="1001"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="3dp"/>

        <RadioButton
            android:id="@+id/radioButton701"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radioButtonsLayout"
            android:layout_alignRight="@+id/playingToTextView"
            android:text="701"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="3dp"/>

        <RadioButton
            android:id="@+id/radioButton501"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radioButtonsLayout"
            android:layout_alignRight="@+id/playingToTextView"
            android:text="501"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold" />
    </RadioGroup>

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/background"
    tools:context=".GameSelectorActivity">

    <RelativeLayout
        android:id="@+id/rlLastGame"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="Imate jednu ne završenu igru: "
            android:textColor="#163e0d"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            android:text="MI:"
            android:textColor="#163e0d"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSumPointsWe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="40dp"
            android:textColor="#cf0e0e"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="50dp"
            android:text="VI:"
            android:textColor="#163e0d"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSumPointsThem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="230dp"
            android:layout_marginTop="40dp"
            android:textColor="#cf0e0e"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="ILI"
            android:textColor="#163e0d"
            android:textSize="30dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Započnite novu igru!"
        android:textColor="#cf0e0e"
        android:textSize="30dp"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:id="@+id/textViewLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="100dp"
        android:layout_toLeftOf="@+id/radioButtonsLayout">

        <TextView
            android:id="@+id/playingToTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playing up to:"
            android:textColor="#163e0d"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/radioButtonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButton1001"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/radioButtonsLayout"
                android:layout_alignRight="@+id/playingToTextView"
                android:layout_marginBottom="3dp"
                android:text="1001"
                android:textAlignment="center"
                android:textColor="#163e0d"
                android:textSize="25dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioButton701"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/radioButtonsLayout"
                android:layout_alignRight="@+id/playingToTextView"
                android:layout_marginBottom="3dp"
                android:text="701"
                android:textAlignment="center"

                android:textColor="#163e0d"
                android:textSize="25dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioButton501"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/radioButtonsLayout"
                android:layout_alignRight="@+id/playingToTextView"
                android:text="501"
                android:textAlignment="center"
                android:textColor="#163e0d"

                android:textSize="25dp"
                android:textStyle="bold" />
        </RadioGroup>

    </LinearLayout>

</RelativeLayout>